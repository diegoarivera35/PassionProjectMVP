
@{
    ViewBag.Title = "Create";
}

<h2>Create Patient</h2>
<form action="/Patient/Create" method="POST">
    <div>
        <label>First Name:</label><input type="text" name="PatientFirstName" />
    </div>
    <div>
        <label>Last Name:</label><input type="text" name="PatientLastName" />
    </div>
    <div>
        <label>Nationality:</label><input type="text" name="PatientNationality" />
    </div>
    <div>
        <label>Email:</label><input type="text" name="PatientEmail" />
    </div>
    <div>
        <label>Phone:</label><input type="number" name="PatientPhone" />
    </div>
    <div>
        <input type="submit" value="Add Patient" />
    </div>


</form>

