﻿@model WebApplicationMVP.Models.DoctorDto

@{
    ViewBag.Title = "DeleteConfirm";
}

<h2>Are you sure you want to delete this Doctor?</h2>
<a href="/Doctor/List">Cancel</a>
<h3>Name: @Model.DoctorFirstName @Model.DoctorLastName</h3>
<form action="/Doctor/Delete/@Model.DoctorID" method="POST">
    <input class="btn btn-danger" type="submit" value="Confirm Delete" />
</form>