﻿@model PassionProjectMVP.Models.PatientDto

@{
    ViewBag.Title = "DeleteConfirm";
}

<h2>Are you sure you want to delete this patient?</h2>
<a href="/Patient/List">Cancel</a>
<h2>@Model.PatientFirstName @Model.PatientLastName</h2>
<div>Nationality: @Model.PatientNationality </div>
<div>Email: @Model.PatientEmail</div>
<div>Phone: @Model.PatientPhone</div>
<form action="/Patient/Delete/@Model.PatientID" method="POST">
    <input type="submit" value="Confirm Delete" />

</form>