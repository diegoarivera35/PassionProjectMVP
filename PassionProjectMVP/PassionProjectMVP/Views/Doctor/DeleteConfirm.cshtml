﻿@model PassionProjectMVP.Models.DoctorDto

@{
    ViewBag.Title = "DeleteConfirm";
}

<h2>Are you sure you want to delete this patient?</h2>
<a href="/Doctor/List">Cancel</a>
<h2>@Model.DoctorFirstName @Model.DoctorLastName</h2>
<div>Specialization: @Model.DoctorSpecialization </div>
<div>Email: @Model.DoctorEmail</div>
<div>Phone: @Model.DoctorPhone</div>
<form action="/Doctor/Delete/@Model.DoctorID" method="POST">
    <input type="submit" value="Confirm Delete" />

</form>